#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    if(n%2!=0)
    {
        cout<<n/2<<" "<<(n/2)+1;
    }
    else
    {
        int a=n/2;
        if(a%2==0)
        {
            cout<<a-1<<" "<<a+1;
        }
        else
        {
            cout<<a-2<<" "<<a+2;
        }
    }

}
